[Unit]
Description=Gunicorn service for Kittygram

After=network.target

[Service]
User=yc-user
Group=yc-user

WorkingDirectory=/home/yc-user/infra_sprint1/backend

ExecStart=/home/yc-user/infra_sprint1/backend/venv/bin/gunicorn --workers 3 --bind 127.0.0.1:8080 kittygram_backend.wsgi:application
Restart=always
RestartSec=3


[Install]
WantedBy=multi-user.target
